@model MonitoringConfigurator.Models.ConfigurationResult
@{
    ViewData["Title"] = "Twoja konfiguracja";
    Layout = "~/Views/Shared/_Layout.cshtml";
    // Serializacja wyniku do JSON, aby przekazać go do generatora PDF
    var jsonResult = System.Text.Json.JsonSerializer.Serialize(Model);
}

<div class="container py-5">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h1 class="h2 text-white">Propozycja zestawu</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">Zmień parametry</a>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card card-dark mb-4">
                <div class="card-header bg-transparent border-secondary py-3">
                    <h5 class="mb-0 text-warning"><i class="bi bi-box-seam me-2"></i> Wybrane urządzenia</h5>
                </div>
                <div class="table-responsive">
                    <table class="table table-dark-custom align-middle mb-0">
                        <thead>
                            <tr>
                                <th class="ps-4">Produkt</th>
                                <th class="text-center">Ilość</th>
                                <th class="text-end pe-4">Cena jedn.</th>
                                <th class="text-end pe-4">Wartość</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.SelectedCamera != null)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="fw-bold text-white">@Model.SelectedCamera.Name</div>
                                        <small class="text-muted">Kamera: @Model.SelectedCamera.ResolutionMp MPix</small>
                                    </td>
                                    <td class="text-center"><span class="badge bg-secondary">@Model.CameraQuantity szt.</span></td>
                                    <td class="text-end">@Model.SelectedCamera.Price.ToString("N2")</td>
                                    <td class="text-end pe-4 fw-bold">@((Model.SelectedCamera.Price * Model.CameraQuantity).ToString("N2")) zł</td>
                                </tr>
                            }

                            @if (Model.SelectedNvr != null)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="fw-bold text-white">@Model.SelectedNvr.Name</div>
                                        <small class="text-muted">Rejestrator: @Model.SelectedNvr.Channels kanałów</small>
                                    </td>
                                    <td class="text-center"><span class="badge bg-secondary">1 szt.</span></td>
                                    <td class="text-end">@Model.SelectedNvr.Price.ToString("N2")</td>
                                    <td class="text-end pe-4 fw-bold">@Model.SelectedNvr.Price.ToString("N2") zł</td>
                                </tr>
                            }

                            @if (Model.SelectedSwitch != null)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="fw-bold text-white">@Model.SelectedSwitch.Name</div>
                                        <small class="text-muted">Switch PoE: @Model.SelectedSwitch.Ports portów</small>
                                    </td>
                                    <td class="text-center"><span class="badge bg-secondary">@Model.SwitchQuantity szt.</span></td>
                                    <td class="text-end">@Model.SelectedSwitch.Price.ToString("N2")</td>
                                    <td class="text-end pe-4 fw-bold">@((Model.SelectedSwitch.Price * Model.SwitchQuantity).ToString("N2")) zł</td>
                                </tr>
                            }

                            @if (Model.SelectedDisk != null)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="fw-bold text-white">@Model.SelectedDisk.Name</div>
                                        <small class="text-muted">Dysk twardy: @Model.SelectedDisk.StorageTB TB</small>
                                    </td>
                                    <td class="text-center"><span class="badge bg-secondary">@Model.DiskQuantity szt.</span></td>
                                    <td class="text-end">@Model.SelectedDisk.Price.ToString("N2")</td>
                                    <td class="text-end pe-4 fw-bold">@((Model.SelectedDisk.Price * Model.DiskQuantity).ToString("N2")) zł</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot style="border-top: 2px solid #444;">
                            <tr>
                                <td colspan="3" class="text-end pt-3">RAZEM (brutto):</td>
                                <td class="text-end pe-4 pt-3 text-danger fs-4 fw-bold">@Model.TotalPrice.ToString("N2") zł</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card card-dark mb-4">
                <div class="card-body">
                    <h5 class="text-white mb-3">Analiza techniczna</h5>
                    <ul class="list-unstyled text-muted small mb-0">
                        <li class="mb-2 d-flex justify-content-between">
                            <span>Przepustowość:</span>
                            <span class="text-white">@Model.EstimatedBandwidthMbps Mbps</span>
                        </li>
                        <li class="mb-2 d-flex justify-content-between">
                            <span>Wymagany dysk:</span>
                            <span class="text-white">@Model.EstimatedStorageTB TB</span>
                        </li>
                        <li class="mb-2 d-flex justify-content-between">
                            <span>Moc PoE:</span>
                            <span class="text-white">@Model.EstimatedPoEBudgetW W</span>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="card card-dark border-danger border-opacity-25">
                <div class="card-body text-center">
                    <i class="bi bi-file-earmark-pdf text-danger display-4 mb-3"></i>
                    <h5 class="text-white">Pobierz wycenę</h5>
                    <p class="text-muted small">Wygeneruj oficjalny dokument PDF z tym zestawieniem.</p>

                    <form asp-action="GeneratePdf" method="post">
                        <input type="hidden" name="jsonResult" value="@jsonResult" />
                        <button type="submit" class="btn btn-danger w-100">
                            Pobierz PDF
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>