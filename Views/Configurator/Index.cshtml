@model MonitoringConfigurator.Models.ConfiguratorInputModel
@using MonitoringConfigurator.Models
@{
    ViewData["Title"] = "Konfigurator CCTV Pro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-white">Zaawansowany Konfigurator CCTV</h1>
        <p class="text-muted lead">Kompleksowa wycena systemu wraz z montażem i akcesoriami.</p>
    </div>

    <form asp-action="Calculate" method="post">
        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

        <div class="row g-4">
            <div class="col-lg-6">
                <div class="card card-dark h-100 shadow-sm border-secondary">
                    <div class="card-header bg-transparent border-secondary py-3">
                        <h5 class="mb-0 text-white"><i class="bi bi-geo-alt-fill text-danger me-2"></i> Krok 1: Obiekt</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Building" class="form-label text-muted small text-uppercase fw-bold">Typ budynku</label>
                                <select asp-for="Building" class="form-select form-select-dark" asp-items="Html.GetEnumSelectList<BuildingType>()"></select>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="AreaM2" class="form-label text-muted small text-uppercase fw-bold">Metraż (m²)</label>
                                <input asp-for="AreaM2" class="form-control form-control-dark" type="number" />
                            </div>
                            <div class="col-12">
                                <label asp-for="InstallType" class="form-label text-muted small text-uppercase fw-bold">Typ instalacji</label>
                                <select asp-for="InstallType" class="form-select form-select-dark" asp-items="Html.GetEnumSelectList<InstallationType>()"></select>
                                <div class="form-text text-muted small">Wpływa na dobór korytek, uchwytów i puszek montażowych.</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card card-dark h-100 shadow-sm border-secondary">
                    <div class="card-header bg-transparent border-secondary py-3">
                        <h5 class="mb-0 text-white"><i class="bi bi-camera-reels text-danger me-2"></i> Krok 2: Kamery</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-6">
                                <label asp-for="OutdoorCamCount" class="form-label text-white">Zewnętrzne</label>
                                <input asp-for="OutdoorCamCount" class="form-control form-control-dark text-center" type="number" min="0" />
                            </div>
                            <div class="col-6">
                                <label asp-for="IndoorCamCount" class="form-label text-white">Wewnętrzne</label>
                                <input asp-for="IndoorCamCount" class="form-control form-control-dark text-center" type="number" min="0" />
                            </div>
                            <div class="col-12">
                                <label asp-for="ResolutionMp" class="form-label text-muted small text-uppercase fw-bold mt-2">Jakość obrazu</label>
                                <select asp-for="ResolutionMp" class="form-select form-select-dark">
                                    <option value="2">2 Mpix (Full HD)</option>
                                    <option value="4">4 Mpix (2K) - Optymalne</option>
                                    <option value="8">8 Mpix (4K) - Premium</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="card card-dark shadow-sm border-secondary">
                    <div class="card-header bg-transparent border-secondary py-3">
                        <h5 class="mb-0 text-white"><i class="bi bi-lightning-charge text-danger me-2"></i> Krok 3: Zasilanie i Montaż</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-md-6 border-end border-secondary border-opacity-25">
                                <div class="form-check form-switch mb-3">
                                    <input asp-for="NeedUps" class="form-check-input" type="checkbox" id="upsToggle" onchange="document.getElementById('upsTime').disabled = !this.checked">
                                    <label class="form-check-label text-white fw-bold" asp-for="NeedUps">Zasilanie awaryjne (UPS)</label>
                                </div>
                                <div class="mb-2">
                                    <label asp-for="UpsRuntimeMinutes" class="form-label text-muted small">Wymagany czas podtrzymania (min)</label>
                                    <select asp-for="UpsRuntimeMinutes" id="upsTime" class="form-select form-select-dark" disabled>
                                        <option value="10">Krótko (~10 min - bezpieczne wyłączenie)</option>
                                        <option value="30">Średnio (~30 min)</option>
                                        <option value="60">Długo (~60 min)</option>
                                        <option value="120">Bardzo długo (120+ min)</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-6 ps-md-4">
                                <div class="form-check form-switch mb-2">
                                    <input asp-for="NeedCabling" class="form-check-input" type="checkbox" checked>
                                    <label class="form-check-label text-white" asp-for="NeedCabling">Automatyczny dobór kabli i akcesoriów</label>
                                    <div class="form-text text-muted small">System wyliczy ilość kabla i dobierze wkręty/korytka.</div>
                                </div>
                                <div class="form-check form-switch mt-3">
                                    <input asp-for="NeedAssembly" class="form-check-input" type="checkbox">
                                    <label class="form-check-label text-white fw-bold" asp-for="NeedAssembly">Wyceń usługę montażu</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 mt-4 text-center">
                <button type="submit" class="btn btn-danger btn-lg px-5 py-3 fw-bold text-uppercase shadow-lg hover-scale">
                    <i class="bi bi-calculator me-2"></i> Oblicz Kosztorys
                </button>
            </div>
        </div>
    </form>
</div>