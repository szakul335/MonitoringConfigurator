
@model MonitoringConfigurator.Models.ProductsListVm
@using MonitoringConfigurator.Models
@{
    ViewData["Title"] = "Katalog produktów";
}


<div class="container-fluid py-4 products-page">
    <div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center mb-4 gap-2">
        <div>
            <h1 class="page-title mb-1">Katalog produktów</h1>
            <p class="page-subtitle mb-0">
                Kamery, rejestratory, switche PoE, okablowanie i akcesoria – wszystko do kompletnego systemu monitoringu.
            </p>
        </div>
        <div class="text-lg-end">
            <span class="badge rounded-pill bg-primary-subtle text-primary-emphasis products-counter d-block mb-2">
                Łącznie: <strong>@Model.Total</strong> produktów
            </span>

            @if (User.IsInRole("Admin"))
            {
                <a href="@Url.Action("Manage","Products")" class="btn btn-sm btn-outline-light">
                    Zarządzaj produktami
                </a>
            }
        </div>
    </div>

    <!-- GÓRNE ZAKŁADKI KATEGORII -->
    <div class="products-tabs mb-3">
        <ul class="nav nav-pills flex-wrap gap-2">
            <li class="nav-item">
                <a class="nav-link @(Model.Category == null ? "active" : "")"
                   href="@Url.Action("Index", new { sort = Model.Sort, q = Model.Q, min = Model.Min, max = Model.Max, only = Model.Only })">
                    Wszystkie
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(Model.Category == ProductCategory.Camera ? "active" : "")"
                   href="@Url.Action("Index", new { cat = ProductCategory.Camera, sort = Model.Sort, q = Model.Q, min = Model.Min, max = Model.Max, only = Model.Only })">
                    Kamery IP
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(Model.Category == ProductCategory.NVR ? "active" : "")"
                   href="@Url.Action("Index", new { cat = ProductCategory.NVR, sort = Model.Sort, q = Model.Q, min = Model.Min, max = Model.Max, only = Model.Only })">
                    Rejestratory NVR
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(Model.Category == ProductCategory.Switch ? "active" : "")"
                   href="@Url.Action("Index", new { cat = ProductCategory.Switch, sort = Model.Sort, q = Model.Q, min = Model.Min, max = Model.Max, only = Model.Only })">
                    Switche PoE
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(Model.Category == ProductCategory.Cabling ? "active" : "")"
                   href="@Url.Action("Index", new { cat = ProductCategory.Cabling, sort = Model.Sort, q = Model.Q, min = Model.Min, max = Model.Max, only = Model.Only })">
                    Okablowanie
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(Model.Category == ProductCategory.Power ? "active" : "")"
                   href="@Url.Action("Index", new { cat = ProductCategory.Power, sort = Model.Sort, q = Model.Q, min = Model.Min, max = Model.Max, only = Model.Only })">
                    Zasilanie i UPS
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(Model.Category == ProductCategory.Accessory ? "active" : "")"
                   href="@Url.Action("Index", new { cat = ProductCategory.Accessory, sort = Model.Sort, q = Model.Q, min = Model.Min, max = Model.Max, only = Model.Only })">
                    Akcesoria
                </a>
            </li>
        </ul>
    </div>

    <!-- SZYBKIE FILTRY -->
    <div class="quick-filters d-flex flex-wrap gap-2 mb-4">
        <span class="quick-filters-label text-muted me-2">Szybkie filtry:</span>
        <a class="btn btn-sm btn-outline-secondary"
           href="@Url.Action("Index", new { cat = Model.Category, max = 1000m, sort = "price_asc", only = Model.Only })">
            Do 1000 zł
        </a>
        <a class="btn btn-sm btn-outline-secondary"
           href="@Url.Action("Index", new { cat = Model.Category, min = 1000m, sort = "price_asc", only = Model.Only })">
            Powyżej 1000 zł
        </a>
        <a class="btn btn-sm btn-outline-secondary @(Model.Only ? "active" : "")"
           href="@Url.Action("Index", new { cat = Model.Category, q = Model.Q, min = Model.Min, max = Model.Max, only = true, sort = Model.Sort })">
            Tylko dostępne
        </a>
        <a class="btn btn-sm btn-outline-secondary"
           href="@Url.Action("Index")">
            Wyczyść filtry
        </a>
    </div>

<div class="row g-4">
        <!-- LISTA PRODUKTÓW -->
        <div class="col-lg-9 order-1 order-lg-0">
            @if (Model.Items.Count == 0)
            {
                <div class="alert alert-warning">
                    Nie znaleziono produktów spełniających podane kryteria. Spróbuj zmienić filtr lub wyszukiwane hasło.
                </div>
            }
            else
            {
                <div class="row row-cols-1 row-cols-sm-2 row-cols-xl-3 g-3">
                    @foreach (var p in Model.Items)
                    {
                        <div class="col">
                            <div class="product-card h-100 d-flex flex-column position-relative">
                                <div class="d-flex align-items-start justify-content-between mb-1">
                                    <div class="product-name">@p.Name</div>
                                    <span class="badge product-category-badge">@p.CategoryLabel</span>
                                </div>
                                <div class="text-muted small mb-2">@p.Brand @p.Model</div>

                                @if (!string.IsNullOrWhiteSpace(p.ImageUrl))
                                {
                                    <div class="ratio ratio-16x9 mb-2 product-image-wrapper">
                                        <img src="@p.ImageUrl"
                                             class="img-fluid rounded product-image"
                                             alt="@p.Name" loading="lazy" />
                                    </div>
                                }

                                <div class="small mb-2 text-secondary">
                                    @* skrócone parametry zależne od kategorii *@
                                    @switch (p.Category)
                                    {
                                        case MonitoringConfigurator.Models.ProductCategory.Camera:
                                            <text>
                                                MP: <strong>@p.ResolutionMp</strong> • IR: <strong>@p.IrRangeM m</strong>
                                            </text>
                                            break;
                                        case MonitoringConfigurator.Models.ProductCategory.NVR:
                                            <text>
                                                Kanały: <strong>@p.Channels</strong> • Bitrate: <strong>@p.MaxBandwidthMbps Mbps</strong>
                                            </text>
                                            break;
                                        case MonitoringConfigurator.Models.ProductCategory.Switch:
                                            <text>
                                                Porty: <strong>@p.Ports</strong> • Budżet PoE: <strong>@p.PoeBudgetW W</strong>
                                            </text>
                                            break;
                                        case MonitoringConfigurator.Models.ProductCategory.Cabling:
                                            <text>
                                                Długość rolki: <strong>@p.RollLengthM m</strong>
                                            </text>
                                            break;
                                        case MonitoringConfigurator.Models.ProductCategory.Power:
                                            <text>
                                                UPS: <strong>@p.UpsVA VA</strong>
                                            </text>
                                            break;
                                        default:
                                            <text>@p.Description</text>
                                            break;
                                    }
                                </div>

                                @* ROZWIJANY OPIS *@
                                @if (!string.IsNullOrWhiteSpace(p.LongDescription) || !string.IsNullOrWhiteSpace(p.Description))
                                {
                                    var descId = $"desc_{p.Id}";
                                    <button class="btn btn-sm btn-outline-light description-toggle mt-1"
                                            type="button"
                                            data-bs-toggle="collapse"
                                            data-bs-target={"#" + descId}
                                            aria-expanded="false"
                                            aria-controls="@descId">
                                        Pokaż opis
                                        <span class="description-toggle-icon">&rsaquo;</span>
                                    </button>
                                    <div class="collapse mt-2" id="@descId">
                                        <div class="small text-muted">
                                            @(string.IsNullOrWhiteSpace(p.Description) ? p.LongDescription : p.Description)
                                        </div>
                                    </div>
                                }

                                <div class="mt-auto d-flex align-items-center justify-content-between pt-3">
                                    <div class="product-price">
                                        @p.Price.ToString("C")
                                    </div>
                                    <div class="btn-group">
                                        <a class="btn btn-sm btn-outline-secondary"
                                           href="@Url.Action("Details", new { id = p.Id })">
                                            Szczegóły
                                        </a>
                                        <a class="btn btn-sm btn-danger"
                                           href="@Url.Action("Index", "Configurator", new { productId = p.Id })">
                                            Użyj w konfiguratorze
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <div class="text-muted small">
                        Strona <strong>@Model.Page</strong>,
                        @Model.Items.Count na tej stronie.
                    </div>
                    <div class="btn-group">
                        @{
                            var prev = Model.Page > 1 ? Model.Page - 1 : 1;
                            var next = (Model.Page * Model.PageSize) < Model.Total ? Model.Page + 1 : Model.Page;
                        }
                        <a class="btn btn-outline-secondary"
                           href="@Url.Action("Index", new { q = Model.Q, cat = Model.SelectedCategory, min = Model.Min, max = Model.Max, only = Model.Only, sort = Model.Sort, page = prev, pageSize = Model.PageSize })">
                            &laquo; Poprzednia
                        </a>
                        <span class="btn btn-outline-secondary disabled">Strona @Model.Page</span>
                        <a class="btn btn-outline-secondary"
                           href="@Url.Action("Index", new { q = Model.Q, cat = Model.SelectedCategory, min = Model.Min, max = Model.Max, only = Model.Only, sort = Model.Sort, page = next, pageSize = Model.PageSize })">
                            Następna &raquo;
                        </a>
                    </div>
                </div>
            }
        </div>

        <!-- PANEL FILTRÓW PO PRAWEJ -->
        <div class="col-lg-3 order-0 order-lg-1">
            <div class="filter-card card shadow-sm border-0 bg-dark text-light sticky-top" style="top: 80px;">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <div>
                            <h2 class="filter-title mb-0">Filtry</h2>
                            <small class="text-muted">Zawęż listę produktów</small>
                        </div>
                        <i class="bi bi-funnel filter-icon" aria-hidden="true"></i>
                    </div>

                    <form method="get" class="filter-form">
                        <div class="mb-3">
                            <label class="form-label">Szukaj</label>
                            <input name="q"
                                   value="@Model.Q"
                                   class="form-control"
                                   placeholder="nazwa, marka, model..." />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Kategoria</label>
                            <select name="cat" class="form-select">
                                <option value="">— wszystkie —</option>
                                @foreach (var c in Model.Categories)
                                {
                                    <option value="@c.Value" selected="@(c.Selected ? "selected" : null)">@c.Text</option>
                                }
                            </select>
                        </div>

                        <div class="row g-2 mb-3">
                            <div class="col-6">
                                <label class="form-label">Cena od</label>
                                <input name="min"
                                       value="@(Model.Min?.ToString("0.##"))"
                                       class="form-control"
                                       type="number" step="0.01" min="0" />
                            </div>
                            <div class="col-6">
                                <label class="form-label">Cena do</label>
                                <input name="max"
                                       value="@(Model.Max?.ToString("0.##"))"
                                       class="form-control"
                                       type="number" step="0.01" min="0" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Sortowanie</label>
                            <select name="sort" class="form-select">
                                <option value="price_asc" selected="@(Model.Sort=="price_asc" ? "selected" : null)">Cena rosnąco</option>
                                <option value="price_desc" selected="@(Model.Sort=="price_desc" ? "selected" : null)">Cena malejąco</option>
                                <option value="name_asc" selected="@(Model.Sort=="name_asc" ? "selected" : null)">Nazwa A→Z</option>
                                <option value="name_desc" selected="@(Model.Sort=="name_desc" ? "selected" : null)">Nazwa Z→A</option>
                            </select>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input"
                                   type="checkbox"
                                   name="only"
                                   value="true"
                                   @(Model.Only ? "checked" : null)
                                   id="onlyCheck">
                            <label class="form-check-label" for="onlyCheck">
                                Tylko produkty dostępne
                            </label>
                        </div>

                        <div class="d-flex gap-2">
                            <button class="btn btn-danger w-100" type="submit">
                                Zastosuj filtry
                            </button>
                            <a class="btn btn-outline-light w-100" href="@Url.Action("Index")">
                                Wyczyść
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .products-page {
        background: #0d0f12;
        color: #e5e7eb;
    }

    .products-page .page-title {
        font-size: 1.9rem;
        font-weight: 700;
        letter-spacing: .03em;
    }

    .products-page .page-subtitle {
        font-size: .95rem;
        color: #9ca3af;
    }

    .products-page .products-counter {
        background: rgba(59, 130, 246, 0.1) !important;
        color: #bfdbfe !important;
        padding: .4rem .9rem;
    }


    .products-tabs .nav-link {
        border-radius: 999px;
        padding-inline: 1rem;
        padding-block: .35rem;
        font-size: .85rem;
    }

    .products-tabs .nav-link.active {
        background-color: #3b82f6;
        border-color: #3b82f6;
        color: #f9fafb;
    }

    .quick-filters-label {
        font-size: .8rem;
        text-transform: uppercase;
        letter-spacing: .08em;
    }

    .quick-filters .btn-sm {
        border-radius: 999px;
        font-size: .8rem;
    }

    .quick-filters .btn-sm.active {
        background-color: #22c55e;
        border-color: #22c55e;
        color: #0f172a;
    }


    .product-card {
        background: #151518;
        border-radius: 0.9rem;
        border: 1px solid #2b2b2b;
        padding: 1rem;
        box-shadow: 0 10px 25px rgba(0,0,0,.45);
        transition: transform .15s ease, box-shadow .15s ease, border-color .15s ease;
    }

    .product-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 18px 35px rgba(0,0,0,.55);
        border-color: #3b82f6;
    }

    .product-name {
        font-weight: 600;
        font-size: 1.05rem;
    }

    .product-category-badge {
        background: rgba(31, 41, 55, .9);
        border-radius: 999px;
        font-size: .7rem;
        text-transform: uppercase;
        letter-spacing: .08em;
    }

    .product-image-wrapper {
        overflow: hidden;
        border-radius: 0.75rem;
        background: radial-gradient(circle at top, #1f2937, #020617);
    }

    .product-image {
        object-fit: cover;
        width: 100%;
        height: 100%;
        transition: transform .3s ease;
    }

    .product-card:hover .product-image {
        transform: scale(1.03);
    }

    .product-price {
        font-size: 1.1rem;
        font-weight: 700;
        color: #f97316;
    }

    .description-toggle {
        border-radius: 999px;
        font-size: .8rem;
        padding-inline: .9rem;
        display: inline-flex;
        align-items: center;
        gap: .3rem;
    }

    .description-toggle-icon {
        display: inline-block;
        transition: transform .2s ease;
    }

    .description-toggle[aria-expanded="true"] .description-toggle-icon {
        transform: rotate(90deg);
    }

    .filter-card {
        border-radius: 1rem;
        background: radial-gradient(circle at top, #111827, #020617);
    }

    .filter-title {
        font-size: 1.1rem;
        font-weight: 600;
    }

    .filter-icon {
        font-size: 1.4rem;
        opacity: .5;
    }

    .filter-form .form-label {
        font-size: .8rem;
        text-transform: uppercase;
        letter-spacing: .09em;
        color: #9ca3af;
    }

    .filter-form .form-control,
    .filter-form .form-select {
        background-color: #020617;
        border-color: #374151;
        color: #e5e7eb;
        font-size: .9rem;
    }

    .filter-form .form-control:focus,
    .filter-form .form-select:focus {
        border-color: #3b82f6;
        box-shadow: 0 0 0 .15rem rgba(37, 99, 235, .35);
    }

    .filter-form .btn-danger {
        background: #ef4444;
        border-color: #ef4444;
    }

    .filter-form .btn-danger:hover {
        background: #dc2626;
        border-color: #dc2626;
    }

    .filter-form .btn-outline-light {
        border-color: #4b5563;
        color: #e5e7eb;
    }

    .filter-form .btn-outline-light:hover {
        background: #4b5563;
        color: #f9fafb;
    }

    @@media (max-width: 991.98px) {
        .filter-card {
            position: static !important;
        }
    }
</style>
