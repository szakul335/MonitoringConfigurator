@model MonitoringConfigurator.Models.ProductCatalogViewModel
@using MonitoringConfigurator.Models
@{
    ViewData["Title"] = "Produkty do monitoringu";
}

<div class="d-flex align-items-center justify-content-between mb-4 flex-wrap gap-3">
    <div>
        <h1 class="h3 mb-1">Produkty do monitoringu</h1>
        <p class="text-muted mb-0">Przeglądaj kamery, rejestratory i akcesoria potrzebne w instalacjach CCTV.</p>
    </div>
    <div class="d-flex gap-2">
        <a class="btn btn-outline-dark" asp-controller="Info" asp-action="Guides">Poradnik doboru sprzętu</a>
        @if (User.IsInRole("Admin"))
        {
            <a class="btn btn-primary" href="https://localhost:54070/Products/Manage">Zarządzaj produktami</a>
        }
    </div>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label asp-for="Category" class="form-label"></label>
                <select asp-for="Category" class="form-select" asp-items="Html.GetEnumSelectList<ProductCategory>()">
                    <option value="">Wszystkie kategorie</option>
                </select>
            </div>
            <div class="col-md-5">
                <label asp-for="Query" class="form-label"></label>
                <input asp-for="Query" class="form-control" placeholder="np. kamera 8mp, Hikvision" />
            </div>
            <div class="col-md-3 d-flex gap-2">
                <button type="submit" class="btn btn-primary flex-grow-1">Filtruj</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Wyczyść</a>
            </div>
        </form>
    </div>
</div>

@if (!Model.Products.Any())
{
    <div class="alert alert-info">Brak produktów spełniających kryteria wyszukiwania.</div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model.Products)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrWhiteSpace(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="object-fit:cover; height:180px;" />
                    }
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <span class="badge bg-secondary">@item.Category</span>
                            <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">Podgląd</a>
                        </div>
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-subtitle text-muted mb-2">@($"{item.Brand} {item.Model}".Trim())</p>

                        <p class="fw-semibold mb-2">@item.Price.ToString("C")</p>
                        <p class="card-text text-secondary small flex-grow-1">
                            @(item.ShortDescription ?? item.Description ?? item.LongDescription ?? "Brak opisu")
                        </p>

                        <div class="mt-3 d-flex justify-content-between text-muted small">
                            @if (item.ResolutionMp.HasValue)
                            {
                                <span>@item.ResolutionMp Mpix</span>
                            }
                            @if (item.IrRangeM.HasValue)
                            {
                                <span>IR @item.IrRangeM m</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
