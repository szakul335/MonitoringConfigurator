@model MonitoringConfigurator.Models.Product
@using MonitoringConfigurator.Models

<div class="row g-3">
    <div class="col-md-6">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label asp-for="Brand" class="form-label"></label>
        <input asp-for="Brand" class="form-control" />
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label asp-for="Model" class="form-label"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="Category" class="form-label"></label>
        <select asp-for="Category" class="form-select" asp-items="Html.GetEnumSelectList<ProductCategory>()"></select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="col-md-12">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="2"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="col-md-12">
        <label asp-for="LongDescription" class="form-label"></label>
        <textarea asp-for="LongDescription" class="form-control" rows="3"></textarea>
        <span asp-validation-for="LongDescription" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="ImageUrl" class="form-label"></label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label asp-for="ResolutionMp" class="form-label"></label>
        <input asp-for="ResolutionMp" class="form-control" />
        <span asp-validation-for="ResolutionMp" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label asp-for="Lens" class="form-label"></label>
        <input asp-for="Lens" class="form-control" />
        <span asp-validation-for="Lens" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="IrRangeM" class="form-label"></label>
        <input asp-for="IrRangeM" class="form-control" />
        <span asp-validation-for="IrRangeM" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label asp-for="Outdoor" class="form-label"></label>
        <select asp-for="Outdoor" class="form-select">
            <option value="">Nie dotyczy</option>
            <option value="true">Tak</option>
            <option value="false">Nie</option>
        </select>
        <span asp-validation-for="Outdoor" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label asp-for="Channels" class="form-label"></label>
        <input asp-for="Channels" class="form-control" />
        <span asp-validation-for="Channels" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label asp-for="MaxBandwidthMbps" class="form-label"></label>
        <input asp-for="MaxBandwidthMbps" class="form-control" />
        <span asp-validation-for="MaxBandwidthMbps" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="Ports" class="form-label"></label>
        <input asp-for="Ports" class="form-control" />
        <span asp-validation-for="Ports" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label asp-for="PoeBudgetW" class="form-label"></label>
        <input asp-for="PoeBudgetW" class="form-control" />
        <span asp-validation-for="PoeBudgetW" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label asp-for="DiskBays" class="form-label"></label>
        <input asp-for="DiskBays" class="form-control" />
        <span asp-validation-for="DiskBays" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label asp-for="MaxHddTB" class="form-label"></label>
        <input asp-for="MaxHddTB" class="form-control" />
        <span asp-validation-for="MaxHddTB" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="StorageTB" class="form-label"></label>
        <input asp-for="StorageTB" class="form-control" />
        <span asp-validation-for="StorageTB" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label asp-for="SupportsRaid" class="form-label"></label>
        <select asp-for="SupportsRaid" class="form-select">
            <option value="">Nie dotyczy</option>
            <option value="true">Tak</option>
            <option value="false">Nie</option>
        </select>
        <span asp-validation-for="SupportsRaid" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label asp-for="RollLengthM" class="form-label"></label>
        <input asp-for="RollLengthM" class="form-control" />
        <span asp-validation-for="RollLengthM" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label asp-for="UpsVA" class="form-label"></label>
        <input asp-for="UpsVA" class="form-control" />
        <span asp-validation-for="UpsVA" class="text-danger"></span>
    </div>
</div>
