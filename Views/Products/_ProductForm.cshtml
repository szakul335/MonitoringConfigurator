
@model MonitoringConfigurator.Models.Product
@using MonitoringConfigurator.Models

<div class="row">
  <div class="col-lg-8 mx-auto">
    <div class="card shadow-sm">
      <div class="card-body">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="mb-3">
          <label class="form-label">Nazwa</label>
          @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "np. Kamera IP 4MP" })
          @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>

        <div class="row">
          <div class="col-md-4 mb-3">
            <label class="form-label">Producent</label>
            @Html.TextBoxFor(m => m.Brand, new { @class = "form-control", placeholder = "np. Hikvision" })
          </div>
          <div class="col-md-4 mb-3">
            <label class="form-label">Model</label>
            @Html.TextBoxFor(m => m.Model, new { @class = "form-control", placeholder = "np. DS-2CD2083G2-I" })
          </div>
          <div class="col-md-4 mb-3">
            <label class="form-label">Kategoria</label>
            @Html.DropDownListFor(
              m => m.Category,
              Html.GetEnumSelectList<ProductCategory>(),
              (string)null,
              new { @class = "form-select" })
          </div>
        </div>

        <div class="row">
          <div class="col-md-4 mb-3">
            <label class="form-label">Cena</label>
            @Html.TextBoxFor(
              m => m.Price,
              new {
                @class = "form-control",
                type = "number",
                step = "0.01",
                min = "0"
              })
          </div>
          <div class="col-md-4 mb-3">
            <label class="form-label">Stan magazynowy</label>
            @Html.TextBoxFor(
              m => m.Stock,
              new {
                @class = "form-control",
                type = "number",
                step = "1",
                min = "0"
              })
          </div>
          <div class="col-md-4 mb-3">
            <label class="form-label">Adres obrazka (URL)</label>
            @Html.TextBoxFor(
              m => m.ImageUrl,
              new {
                @class = "form-control",
                placeholder = "https://example.com/obrazek.jpg"
              })
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label">Opis (krótki)</label>
          @Html.TextAreaFor(
            m => m.Description,
            4,
            60,
            new {
              @class = "form-control",
              placeholder = "Krótki opis produktu widoczny na liście..."
            })
        </div>

        <div class="mb-3">
          <label class="form-label">Rozszerzony opis</label>
          @Html.TextAreaFor(
            m => m.LongDescription,
            8,
            60,
            new {
              @class = "form-control",
              placeholder = "Szczegółowe informacje techniczne, zastosowanie, uwagi instalacyjne..."
            })
        </div>

        <div class="d-flex gap-2">
          <button type="submit" class="btn btn-primary">
            <i class="bi bi-check2-circle"></i> Zapisz
          </button>
          <a href="@Url.Action("Manage","Products")" class="btn btn-outline-secondary">Anuluj</a>
        </div>
      </div>
    </div>
  </div>
</div>
