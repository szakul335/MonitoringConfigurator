@model MonitoringConfigurator.Models.ProductManagementViewModel
@using MonitoringConfigurator.Models
@using Microsoft.AspNetCore.Mvc.ViewFeatures
        TemplateInfo = new TemplateInfo { HtmlFieldPrefix = "EditableProduct" }
    };
}

<div class="d-flex align-items-center justify-content-between mb-4 flex-wrap gap-3">
    <div>
        <h1 class="h3 mb-1">Panel produktów</h1>
        <p class="text-muted mb-0">Dodawaj, edytuj i filtruj produkty dostępne w katalogu.</p>
    </div>
    <a class="btn btn-primary" href="#productForm">Dodaj produkt</a>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form asp-action="Manage" method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label asp-for="Category" class="form-label"></label>
                <select asp-for="Category" class="form-select" asp-items="Html.GetEnumSelectList<ProductCategory>()">
                    <option value="">Wszystkie kategorie</option>
                </select>
            </div>
            <div class="col-md-5">
                <label asp-for="Query" class="form-label"></label>
                <input asp-for="Query" class="form-control" placeholder="Szukaj po nazwie, marce lub modelu" />
            </div>
            <div class="col-md-3 d-flex gap-2">
                <button type="submit" class="btn btn-outline-primary flex-grow-1">Filtruj</button>
                <a asp-action="Manage" class="btn btn-outline-secondary">Wyczyść</a>
            </div>
        </form>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-8">
        @if (!Model.Products.Any())
        {
            <div class="alert alert-info">Brak produktów w katalogu.</div>
        }
        else
        {
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table align-middle">
                            <thead>
                                <tr>
                                    <th>Nazwa</th>
                                    <th>Kategoria</th>
                                    <th>Cena</th>
                                    <th style="width: 120px;"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Products)
                                {
                                    <tr>
                                        <td>
                                            <div class="fw-semibold">@item.Name</div>
                                            <div class="text-muted small">@item.Brand @item.Model</div>
                                        </td>
                                        <td>@item.Category</td>
                                        <td>@item.Price.ToString("C")</td>
                                        <td>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
