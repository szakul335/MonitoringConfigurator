@model OpinionViewModel

@{
    ViewData["Title"] = "Opinie";
}

<style>
    .opinions-page {
        background:#0f0f10;
        color:#ffffff;
    }
    .opinion-card,
    .opinion-form-card {
        background:#151518;
        border:1px solid #2b2b2b;
        border-radius:.5rem;
    }
    .opinion-card small {
        color:#9ca3af;
    }
    .form-control {
        background:#121214;
        border-color:#2a2a2a;
        color:#ffffff;
    }
    .form-control:focus {
        border-color:#ff3b30;
        box-shadow:none;
    }
    .btn-danger {
        background:#ff3b30;
        border-color:#ff3b30;
    }
    .btn-danger:hover {
        background:#ff4b40;
        border-color:#ff4b40;
    }
</style>

<div class="container py-4 opinions-page">
    <h1 class="mb-3">Opinie o aplikacji</h1>
    <p class="text-muted mb-4">
        Podziel się swoją opinią o konfiguratorze systemów monitoringu. Twoje uwagi pomagają nam rozwijać aplikację.
    </p>

    @if (TempData["Msg"] is string msg)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @msg
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Zamknij"></button>
        </div>
    }

    <div class="row g-4">
        <div class="col-12 col-lg-6">
            <div class="opinion-form-card p-3 h-100">
                <h5 class="mb-3">Napisz swoją opinię</h5>

                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <form asp-action="Opinions" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
                        <div class="mb-3">
                            <label asp-for="Message" class="form-label">Treść opinii</label>
                            <textarea asp-for="Message" class="form-control" rows="5" placeholder="Co Ci się podoba, a co możemy poprawić?"></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>
                        <p class="text-muted" style="font-size:.9rem;">
                            Opinie mogą być wykorzystane do ulepszania aplikacji. Nie publikuj wrażliwych danych klientów ani haseł.
                        </p>
                        <button type="submit" class="btn btn-danger mt-1">Wyślij opinię</button>
                    </form>
                }
                else
                {
                    <p class="mb-2">
                        Aby dodać opinię, musisz być zalogowany.
                    </p>
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-light btn-sm me-2">Zaloguj się</a>
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-secondary btn-sm">Załóż konto</a>
                }
            </div>
        </div>

        <div class="col-12 col-lg-6">
            <div class="opinion-card p-3 h-100">
                <h5 class="mb-3">Ostatnie opinie użytkowników</h5>

                @if (Model.ExistingOpinions != null && Model.ExistingOpinions.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var op in Model.ExistingOpinions)
                        {
                            <div class="list-group-item bg-transparent px-0">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <p class="mb-1">@op.Message</p>
                                        <small>
                                            @op.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")
                                            @if (!string.IsNullOrEmpty(op.UserId))
                                            {
                                                @: · użytkownik zalogowany
                                            }
                                        </small>
                                    </div>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <form asp-controller="Info" asp-action="DeleteOpinion" asp-route-id="@op.Id" method="post" class="ms-3">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Na pewno usunąć tę opinię?');">
                                                Usuń
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted mb-0">
                        Nie ma jeszcze żadnych opinii. Bądź pierwszą osobą, która podzieli się swoją opinią o aplikacji.
                    </p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
