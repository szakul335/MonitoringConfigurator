@page
@model MonitoringConfigurator.Areas.Identity.Pages.Account.Manage.IndexModel
@{
    ViewData["Title"] = "Moje konto";
    ViewData["ActivePage"] = MonitoringConfigurator.Areas.Identity.Pages.Account.Manage.ManageNavPages.Index;
    Layout = "/Views/Shared/_Layout.cshtml";
}
<style>
  body{background:#0f0f10;color:#e5e7eb}
  .card{background:#151518;border:1px solid #2b2b2b;border-radius:.6rem}
  .form-control,.form-select{background:#121214;border-color:#2a2a2a;color:#e5e7eb}
  .btn-danger{background:#ff3b30;border-color:#ff3b30}
  .muted{color:#9ca3af}
  .kv{display:flex;justify-content:space-between;gap:12px;padding:.35rem 0;border-bottom:1px dashed #2b2b2b}
  .kv:last-child{border-bottom:none}
  .avatar{width:68px;height:68px;border-radius:50%;display:flex;align-items:center;justify-content:center;
          background:linear-gradient(135deg,#ff3b30,#ff6b61);font-weight:800;font-size:1.2rem;color:white}
</style>

<div class="container py-4">
  <h1 class="mb-1">Moje konto</h1>
  <div class="text-muted mb-3">Zarządzaj ustawieniami swojego konta.</div>

  <div class="row g-3">
    <div class="col-md-3">
      <partial name="_ManageNav"/>
    </div>

    <div class="col-md-9">
      <partial name="_StatusMessage" for="StatusMessage"/>

      <!-- Sekcja: profil -->
      <div class="card p-3 mb-3">
        <div class="d-flex gap-3 align-items-center mb-2">
          <div class="avatar">@Model.Initials</div>
          <div>
            <div class="fw-semibold">@Model.Username</div>
            <div class="muted">ID użytkownika: @Model.UserId</div>
          </div>
        </div>

        <form method="post" asp-page-handler="SaveProfile">
          <div class="row g-2">
            <div class="col-md-6">
              <label class="form-label">Imię i nazwisko</label>
              <input asp-for="Input.FullName" class="form-control" placeholder="np. Jan Kowalski"/>
            </div>
            <div class="col-md-6">
              <label class="form-label">Firma (opcjonalnie)</label>
              <input asp-for="Input.Company" class="form-control" placeholder="np. Konfigurator CCTV"/>
            </div>
            <div class="col-md-6">
              <label class="form-label">Numer telefonu</label>
              <input asp-for="Input.PhoneNumber" class="form-control"/>
              <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
          </div>
          <button class="btn btn-danger mt-3">Zapisz</button>
        </form>
      </div>

      <!-- Sekcja: preferencje -->
      <div class="card p-3 mb-3">
        <h5 class="mb-2">Preferencje</h5>
        <form method="post" asp-page-handler="SavePrefs">
          <div class="row g-2">
            <div class="col-md-4">
              <label class="form-label">Język</label>
              <select asp-for="Prefs.Language" class="form-select">
                <option value="pl">Polski</option>
                <option value="en">English</option>
              </select>
            </div>
            <div class="col-md-4">
              <label class="form-label">Motyw</label>
              <select asp-for="Prefs.Theme" class="form-select">
                <option value="dark">Ciemny</option>
                <option value="light">Jasny</option>
              </select>
            </div>
            <div class="col-md-4 d-flex align-items-end">
              <div class="form-check">
                <input asp-for="Prefs.Newsletter" class="form-check-input" type="checkbox" id="nl">
                <label class="form-check-label" for="nl">Otrzymuj powiadomienia e-mail</label>
              </div>
            </div>
          </div>
          <button class="btn btn-danger mt-3">Zapisz preferencje</button>
        </form>
      </div>

      <!-- Sekcja: avatar -->
      <div class="card p-3 mb-3">
        <h5 class="mb-2">Avatar</h5>
        <div class="d-flex align-items-center gap-3 mb-2">
          <img src="@(string.IsNullOrWhiteSpace(Model.AvatarUrl) ? "/img/avatar-placeholder.png" : Model.AvatarUrl)" alt="avatar" style="width:64px;height:64px;border-radius:50%;object-fit:cover;border:1px solid #2b2b2b;">
          <form method="post" asp-page-handler="UploadAvatar" enctype="multipart/form-data">
            <input class="form-control form-control-sm" type="file" name="avatar" accept="image/*" />
            <button class="btn btn-danger btn-sm mt-2">Wyślij</button>
          </form>
        </div>
        <div class="text-muted small">Akceptowane: JPG/PNG, do 2&nbsp;MB.</div>
      </div>

      <!-- Sekcja: adres korespondencyjny -->
      <div class="card p-3 mb-3">
        <h5 class="mb-2">Adres korespondencyjny</h5>
        <form method="post" asp-page-handler="SaveAddress">
          <div class="row g-2">
            <div class="col-md-6">
              <label class="form-label">Ulica i nr</label>
              <input asp-for="Address.Street" class="form-control" placeholder="np. Gorzechowo 1" />
            </div>
            <div class="col-md-3">
              <label class="form-label">Kod pocztowy</label>
              <input asp-for="Address.PostalCode" class="form-control" placeholder="00-000" />
            </div>
            <div class="col-md-3">
              <label class="form-label">Miasto</label>
              <input asp-for="Address.City" class="form-control" placeholder="np. Gorzechowo" />
            </div>
            <div class="col-md-4">
              <label class="form-label">Kraj</label>
              <input asp-for="Address.Country" class="form-control" placeholder="np. Polska" />
            </div>
          </div>
          <button class="btn btn-danger mt-3">Zapisz adres</button>
        </form>
      </div>

      <!-- Sekcja: eksport danych -->
      <div class="card p-3 mb-3">
        <h5 class="mb-2">Eksport danych</h5>
        <div class="text-muted small mb-2">Pobierz swoje podstawowe dane profilu i preferencji w formacie JSON.</div>
        <form method="post" asp-page-handler="ExportData">
          <button class="btn btn-outline-light">Pobierz JSON</button>
        </form>
      </div>

      <!-- Sekcja: usunięcie konta -->
      <div class="card p-3 mb-3 border-danger">
        <h5 class="mb-2 text-danger">Usuń konto</h5>
        <p class="text-muted small mb-2">Operacja nieodwracalna. Aby potwierdzić, wpisz <strong>USUŃ</strong> i kliknij przycisk.</p>
        <form method="post" asp-page-handler="DeleteAccount" class="d-flex gap-2">
          <input asp-for="Delete.Confirm" class="form-control" placeholder="USUŃ" style="max-width:200px;" />
          <button class="btn btn-danger">Usuń konto</button>
        </form>
      </div>

      <!-- Sekcja: bezpieczeństwo -->
      <div class="card p-3">
        <h5 class="mb-2">Bezpieczeństwo konta</h5>
        <div class="kv"><span>E-mail</span><span>@Model.Email</span></div>
        <div class="kv"><span>Hasło ustawione</span><span>@(Model.HasPassword ? "Tak" : "Nie")</span></div>
        <div class="mt-2 d-flex gap-2">
          <a class="btn btn-outline-light" asp-page="./Email">Zmień e-mail</a>
          <a class="btn btn-outline-light" asp-page="./ChangePassword">Zmień hasło</a>
        </div>
      </div>

    </div>
  </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
